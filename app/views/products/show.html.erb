<% cache @product do %>
<h1>
  <strong>Name:</strong>
  <%= @product.name %>
</h1>
<p>
  <strong>Image:</strong>
  <%= image_tag(@product.image_url, width: "350", class: "img-responsive product_image img-zoom", data_zoom_image: @product.image_url) %>
</p>
<div class="row" data-product-id="<%= @product.id %>">
  <div class="col-sm-6 col-md-6 col-lg-6">
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
  </div>
  <div class="col-sm-6 col-md-6 col-lg-6">
  </div>
</div>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Description: </strong>
  <%= @product.description %>
</p>
<% end %>
<h1>
  <strong>Rated Comments</strong>
</h1>
<p>Average Rating: <div class="rated" id= "average_rating" data-score="
  <%= @product.average_rating %>"></div>
</p>

<%= form_with(url: '/payments/create') do |form| %>
<%= hidden_field_tag(:product_id, @product.id) %>
<%= render partial: "shared/stripe_checkout_button" %>
<% end %>


<%= will_paginate @comments %>
<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
<%= render 'new_comment' %>
<br/>
<span class="badge badge-pill badge-warning">
  <%= @product.views %>
</span>
  Latest reviewer:&nbsp;&nbsp;
<span class="badge badge-pill badge-warning">
  <%= @product.get_recent_reviewer %>
</span>
<%= render 'comments' %>

<%= link_to 'New', new_product_path %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %> |
<%= link_to 'Destroy', @product, method: :delete, data:{confirm: 'Are you sure?'} %>
