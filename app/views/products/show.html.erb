<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @product.name %>
</h1>
  <p>
    <strong>Image:</strong>
    <%= image_tag(@product.image_url, width: "350", class: "img-responsive product_image img-zoom", data_zoom_image: @product.image_url) %>
  </p>
<div class="row">
  <div class="col-sm-6 col-md-6 col-lg-6">
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
  </div>
  <div class="col-sm-6 col-md-6 col-lg-6">
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
  </div>
</div>
  <p>
    <strong>Description: </strong>
    <%= @product.description %>
  </p>

<h1>
  <strong>Rated Comments</strong>
</h1>
  <div class="ratedcomments col-sm-6 col-md-6 col-lg-6">
    <p class="ratingasc">
      <%= @product.highest_rating_comment %>
    </p>
  </div>
  <div class="ratedcomments col-sm-6 col-md-6 col-lg-6">
    <p class="ratingdsc">
      <%= @product.lowest_rating_comment %>
    </p>
  </div>
    <p>Average Rating: <div class="rated" id= "average_rating" data-score="
      <%= @product.average_rating %>"></div>
    </p>
  <%= form_with(url: '/payments/create') do |form| %>
  <%= hidden_field_tag(:product_id, @product.id) %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>


<%= will_paginate @comments %>
<%= render 'new_comment' %>
<%= render 'comments' %>
<%= link_to 'New', new_product_path %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %> |
<%= link_to 'Destroy', @product, method: :delete, data:{confirm: 'Are you sure?'} %>
