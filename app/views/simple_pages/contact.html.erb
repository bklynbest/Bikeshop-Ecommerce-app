<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row" id= "contactform">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control contact_name", placeholder: "Enter Name", type:"text" %>
    <span class="error">This field is required</span>
    <p id= "visible-name"></p>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control contact_email", placeholder: "Enter Email", type:"email" %>
    <span class="error">A valid email is required</span>
    <p id= "visible-email"></p>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control contact_message", placeholder: "Enter Message", rows: 5, type:"text" %>
    <span class="error">This field is required</span>
    <p id= "visible-message"></p>
  </div>
  <div class="form-group">
  <%= form.submit "Send", class: "form_label contact_submit" %>
</div>
</div>

<% end %>
